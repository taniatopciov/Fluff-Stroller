<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dog_owner_profile_navigation"
    app:startDestination="@id/viewDogOwnerProfileFragment">

    <fragment
        android:id="@+id/editDogOwnerProfileFragment"
        android:name="com.example.fluffstroller.pages.profile.dogowner.EditDogOwnerProfileFragment"
        android:label="@string/edit_profile"
        tools:layout="@layout/edit_dog_owner_profile_fragment" >
        <action
            android:id="@+id/from_edit_to_view_dog_owner"
            app:destination="@id/viewDogOwnerProfileFragment" />
        <action
            android:id="@+id/from_edit_to_add_dog"
            app:destination="@id/addDogFragment" />
        <argument
            android:name="dog"
            app:argType="com.example.fluffstroller.models.Dog"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/viewDogOwnerProfileFragment"
        android:name="com.example.fluffstroller.pages.profile.dogowner.ViewDogOwnerProfileFragment"
        android:label="@string/view_profile"
        tools:layout="@layout/view_dog_owner_profile_fragment" >
        <action
            android:id="@+id/from_view_to_edit_dog_owner"
            app:destination="@id/editDogOwnerProfileFragment" />
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/addDogFragment"
        android:name="com.example.fluffstroller.pages.profile.dogowner.AddDogFragment"
        android:label="add_dog_fragment"
        tools:layout="@layout/add_dog_fragment" >
        <action
            android:id="@+id/from_add_dog_to_edit"
            app:destination="@id/editDogOwnerProfileFragment" />
    </fragment>
</navigation>
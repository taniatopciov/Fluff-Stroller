<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/ownerHomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Owner Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/ownerHomeWaitingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Owner Home Waiting"
        app:layout_constraintEnd_toEndOf="@+id/ownerHomeButton"
        app:layout_constraintStart_toStartOf="@+id/ownerHomeButton"
        app:layout_constraintTop_toBottomOf="@+id/ownerHomeButton" />

    <Button
        android:id="@+id/ownerHomeNoDogsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Owner Home No Dogs"
        app:layout_constraintEnd_toEndOf="@+id/ownerHomeButton"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/ownerHomeButton"
        app:layout_constraintTop_toBottomOf="@+id/ownerHomeWaitingButton" />

    <Button
        android:id="@+id/ownerHomWalkInProgressButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Owner Walk In Progress"
        app:layout_constraintEnd_toEndOf="@+id/ownerHomeNoDogsButton"
        app:layout_constraintStart_toStartOf="@+id/ownerHomeNoDogsButton"
        app:layout_constraintTop_toBottomOf="@+id/ownerHomeNoDogsButton" />

    <Button
        android:id="@+id/strollerHomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Stroller Home"
        app:layout_constraintEnd_toEndOf="@+id/ownerHomWalkInProgressButton"
        app:layout_constraintStart_toStartOf="@+id/ownerHomWalkInProgressButton"
        app:layout_constraintTop_toBottomOf="@+id/ownerHomWalkInProgressButton" />

    <Button
        android:id="@+id/walkInProgressButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/walk_in_progress"
        app:layout_constraintEnd_toEndOf="@+id/strollerHomeButton"
        app:layout_constraintStart_toStartOf="@+id/strollerHomeButton"
        app:layout_constraintTop_toBottomOf="@+id/strollerHomeButton" />

    <Button
        android:id="@+id/loginButtonTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walkInProgressButton" />
</androidx.constraintlayout.widget.ConstraintLayout>